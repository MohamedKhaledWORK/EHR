@model IEnumerable<VisitViewModel>

@{
    ViewData["Title"] = "PVisits";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">


            <a asp-action="Index"><h2 class="inactive underlineHover">Personal Details</h2></a>
            <h2 class="active"> Previous Visits </h2>
            <a asp-action="Prescription"><h2 class="inactive underlineHover">Prescriptions</h2></a>
            <a asp-action="LabTests"><h2 class="inactive underlineHover"> Lab Tests </h2></a>
            <a asp-action="LogoutP"><h4 style="color:red">Logout</h4></a>
            <div class="button-container">
                <a asp-action="AddVisit" class="btn-primary">Request Visit</a>
            </div>
            @if (Model.Count() > 0)
            {
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Doctor Name</th>
                            <th>Date</th>
                            <th>Diagnosis</th>
                            <th>FollowUpDate</th>
                            <th>TreatmentPlan</th>
                            <th>ReasonForVisit</th>
                            <th>VisitType</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visit in Model)
                        {
                            <tr>
                                <td>@visit.Patient.Name</td>
                                <td>@visit.Doctor.Staff.Name</td>
                                <td>@visit.Date</td>
                                <td>@(visit.Diagnosis ?? "Not Determined")</td>
                                <td>@visit.FollowUpDate</td>
                                <td>@(visit.TreatmentPlan ?? "Not Determined")</td>
                                <td>@visit.ReasonForVisit</td>
                                <td>@visit.VisitType</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="mt-5 alert alert-warning">
                    <h1>
                        No Visits
                    </h1>
                </div>

            }


        </div>
    </div>
</body>
</html>
