@model IEnumerable<LabViewModel>

@{
    ViewData["Title"] = "LabTests";
    var message = ViewBag.Message;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
    <style>
        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
            z-index: 9999;
        }
    </style>
    <script>
        window.onload = function () {
            const messageBox = document.getElementById("message-box");
            if (messageBox) {
                setTimeout(() => {
                    messageBox.style.opacity = "0";
                    setTimeout(() => messageBox.remove(), 500);
                }, 5000);
            }
        }
    </script>
</head>
<body>
    <div class="container">
		@if (message != null)
		{
			<div id="message-box" class="message-box">
				@message
			</div>
		}

    <div class="wrapper fadeInDown">
        <div id="formContent">

            <a asp-action="Index" ><h2 class="inactive underlineHover">Personal Details </h2></a>
            <h2 class="active"> LabTests</h2>
            <a asp-action="Logout"><h4 style="color:red">Logout</h4></a>

            @if (Model.Count() > 0)
            {
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>LabTestType</th>
                            <th>TestDate</th>
                            <th>TestResult</th>
                            <th>NormalRange</th>
                            <th>TestStatus</th>
                            <th>Actions</th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.Patient.Name</td>
                                <td>@test.LabTestType</td>
                                <td>@test.TestDate</td>
                                <td>@test.TestResult</td>
                                <td>@test.NormalRange</td>
                                <td>@test.TestStatus</td>
                                <td>
                                    <a asp-action="EditTest" asp-route-id="@test.Id"
                                       class="fadeIn fourth"
                                       style="background-color: #56baed; padding: 5px 10px; border-radius: 5px; text-decoration: none; color: white;">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="mt-5 alert alert-warning">
                    <h1>There is No Tests</h1>
                </div>
            }

        </div>
    </div>
</body>
</html>
