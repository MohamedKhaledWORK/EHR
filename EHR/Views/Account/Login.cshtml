@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    var message = ViewBag.Message;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
    <style>
        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
            z-index: 9999;
        }
    </style>
    <script>
        window.onload = function () {
            const messageBox = document.getElementById("message-box");
            if (messageBox) {
                setTimeout(() => {
                    messageBox.style.opacity = "0";
                    setTimeout(() => messageBox.remove(), 500);
                }, 5000);
            }
        }
    </script>
</head>

<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">
            @message
        </div>
        ViewBag.Message = null;
    }
    <div class="wrapper fadeInDown">
        <div id="formContent">
            @if (TempData["Message"] is not null)
            {
                <div id="tempMessage" class="alert alert-success"> @TempData["Message"]</div>
            }
            <h2 class="active"> Sign In </h2>
            <div class="fadeIn first">
                <div class="button-container">
                    <a asp-action="NewUser" class="btn-primary">For New User Create Your Password First</a>
                </div>
                <form asp-action="Login" method="post">
                    <input asp-for="UserName"  class="fadeIn second" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <br />
                    <input asp-for="Password" class="fadeIn third" placeholder="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br />
                    <input type="submit" class="fadeIn fourth" value="Log In">
                    <a asp-action="Intro">Back</a>
                </form>
            </div>
        </div>
    </div>

    @section ValidationScript
    {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

