@model IEnumerable<LabViewModel>
@{
    ViewData["Title"] = "ViewResult";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div class="fadeIn first">
                @if (Model.Count() > 0)
                {
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th>Patient Name</th>
                                <th>LabTestType</th>
                                <th>TestDate</th>
                                <th>TestResult</th>
                                <th>NormalRange</th>
                                <th>TestStatus</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lab in Model)
                            {
                                <tr>
                                    <td>@lab.Patient.Name</td>
                                    <td>@lab.LabTestType</td>
                                    <td>@lab.TestDate</td>
                                    <td>@(lab.TestResult ?? "Not Determined")</td>
                                    <td>@(lab.NormalRange ?? "Not Determined")</td>
                                    <td>@lab.TestStatus</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <div style="display: flex; justify-content: space-between; margin: 20px 40px 10px 40px;">
                    <a asp-action="LabTest" class="fadeIn fourth" style="background-color: #39ace7; padding: 10px 20px; border-radius: 5px; text-decoration: none; color: white;">Back</a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Show the message if it exists, then hide it after 5 seconds
        window.onload = function () {
            var messageDiv = document.getElementById('tempMessage');
            if (messageDiv) {
                messageDiv.style.display = 'block'; // Show the message
                setTimeout(() => messageDiv.style.display = 'none', 7500); // Hide after 5 seconds
            }
        }
    </script>
</body>
</html>

