@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Staff";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">

            
            <a asp-action="Index"><h2 class="inactive underlineHover">Doctors</h2></a>
            <h2 class="active">Staff</h2>
            <a asp-action="Patient"><h2 class="inactive underlineHover">Patients</h2></a>
            <a asp-action="Visits"><h2 class="inactive underlineHover">Visits</h2></a>
            <a asp-action="Logout"><h4 style="color:red">Logout</h4></a>

            <div class="button-container">
                <a asp-action="AddStaff" class="btn-primary">Add Staff</a>
            </div>
            @if (Model.Count() > 0)
            {
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.Name</td>
                                <td>@staff.UserName</td>
                                <td>@staff.Email</td>
                                <td>@staff.Role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="mt-5 alert alert-warning">
                    <h1>
                        There is No Staff
                    </h1>
                </div>

            }


        </div>
    </div>
</body>
</html>
