@model Doctors

@{
    ViewData["Title"] = "Doctors";
    var message = ViewBag.Message;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/account.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<style>
    .message-box {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        background-color: #28a745;
        color: white;
        padding: 15px 20px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 10px auto;
        width: fit-content;
        transition: opacity 0.5s;
        opacity: 1;
        z-index: 9999;
</style>
<script>
    window.onload = function () {
        const messageBox = document.getElementById("message-box");
        if (messageBox) {
            setTimeout(() => {
                messageBox.style.opacity = "0";
                setTimeout(() => messageBox.remove(), 500);
            }, 5000);
        }
    }
</script>
<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">
            @message
        </div>
        ViewBag.Message = null;
    }
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div class="fadeIn first">
                <h1>
                    Add Doctors
                </h1>
                <form asp-action="AddDoctors" method="post">
                    <input asp-for="Staff.Name"  class="fadeIn second"  placeholder="Name" required>
                    <span asp-validation-for="Staff.Name" class="text-danger"></span>
                    <br />
                    <input asp-for="Staff.UserName"  class="fadeIn second"  placeholder="Username" required>
                    <span asp-validation-for="Staff.UserName" class="text-danger" > </span>
                    <br />
                    <input type="email" asp-for="Staff.Email" class="fadeIn second"  placeholder="email@example.com" required>
                    <span asp-validation-for="Staff.Email" class="text-danger"></span>
                    <br />
                    <input asp-for="Specialty" class="fadeIn second"  placeholder="Specialty" required>
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                    <br />
                    <input type="number" asp-for="Phone"  class="fadeIn second"  placeholder="Phone" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <br />
                    <input asp-for="OfficeAddress" class="fadeIn second"  placeholder="OfficeAddress" required>
                    <span asp-validation-for="OfficeAddress" class="text-danger"></span>
                    <br />
                    <label asp-for="Staff.Role">Role</label>
                    <input asp-for="Staff.Role" class="fadeIn second" value="Doctor" readonly>
                    <br />
                    <input type="submit" class="fadeIn fourth" value="Submit">
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
         </div>
    </div>
</body>
</html>
